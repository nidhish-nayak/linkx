{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "$/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.js", ".eslintrc.cjs"]
}
